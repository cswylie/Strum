{
  "entryFile": "app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["**/*.controller.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "schemes": ["http"],
    "basePath": "/api/v0",
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "routes": {
    "routesDir": "."
  }
}